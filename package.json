{
  "name": "ual-scatter",
  "version": "0.1.8",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Block.one",
    "url": "https://block.one"
  },
  "contributors": [
    "Nasser Abouelazm",
    "Chris Allnutt",
    "Randy Torres",
    "Jeffrey Smith II"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "clean-build": "rm -rf dist && yarn build",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "prepublish": "yarn clean-build",
    "test": "jest"
  },
  "dependencies": {
    "@scatterjs/core": "2.7.51",
    "@scatterjs/eosjs2": "1.5.33",
    "elliptic": "6.5.2",
    "eosjs": "^21.0.0-131a987.0",
    "universal-authenticator-library": "0.1.4"
  },
  "jest": {
    "verbose": false,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts?)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ],
    "testRegex": "(/src/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testEnvironment": "jsdom"
  },
  "devDependencies": {
    "@babel/runtime": "^7.2.0",
    "@blockone/tslint-config-blockone": "^4.0.1",
    "@types/elliptic": "^6.4.12",
    "@types/jest": "^25.1.0",
    "@types/node": "^13.5.0",
    "jest": "^25.1.0",
    "ts-jest": "^25.0.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EOSIO/ual-scatter"
  }
}
